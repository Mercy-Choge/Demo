<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/createac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREATE ACCOUNT"
        android:textColor="#562A75"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wasokologo"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/createac"

        />
    <EditText
        android:id="@+id/fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter first name"
        android:textColorHint="#7E47C1"
        android:layout_below="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
       />

    <EditText
        android:id="@+id/lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fname"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:hint="Enter last name"
        android:textColorHint="#7E47C1"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:textColorHint="#7E47C1"
        android:layout_below="@+id/lname"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>
    <EditText
        android:id="@+id/usern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter username"
        android:textColorHint="#7E47C1"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>
    <EditText
        android:id="@+id/passw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:textColorHint="#7E47C1"
        android:inputType="textPassword"
        android:layout_below="@+id/usern"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Details"
        android:textColor="#0F0C73"
        android:layout_below="@+id/passw"
        android:layout_marginTop="90dp"
        />
</RelativeLayout>